<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:weightSum="1"
    tools:context="br.usjt.cosmodossantosalmeida_eduardojunioralmeidaintsi03anbua.PrimeiraTela">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomeLabel" />

        <EditText
            android:id="@+id/nomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assuntoText" />

        <EditText
            android:id="@+id/assuntoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/botaoOK"
            android:onClick="botaoEnviar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>
